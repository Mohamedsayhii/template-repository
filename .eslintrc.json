{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true,
        "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "rules": {
        "no-console": "off",
        "quotes": [
            "error",
            "single",
            { "avoidEscape": true, "allowTemplateLiterals": false }
        ],
        "no-use-before-define": "off",
        "no-shadow": "off",
        "import/extensions": "off",
        "no-undef": "off",
        "import/no-extraneous-dependencies": "off"
    }
}
